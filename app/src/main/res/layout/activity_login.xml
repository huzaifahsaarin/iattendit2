<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/loginbackground"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Login">


    <EditText
        android:id="@+id/usernameTv"
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:layout_above="@+id/passwordTv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edittexttop"
        android:drawableLeft="@drawable/personicon"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:text="" />

    <EditText
        android:id="@+id/passwordTv"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/edittexttop"

        android:drawableLeft="@drawable/passwordicon"
        android:hint="Password"
        android:inputType="textPassword"
        android:linksClickable="false"
        android:paddingLeft="5dp"
        android:phoneNumber="true"
        android:text="" />

    <TextView
        android:id="@+id/loginstatusdisplaytv"
        android:layout_width="match_parent"
        android:layout_height="59dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"


        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/tvregisteruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="145dp"
        android:clickable="true"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="Register New User" />

    <TextView
        android:id="@+id/tvforgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_marginBottom="116dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Forget Password?"
     />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="80dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="5dp"
            android:allowUndo="false"
            android:background="@android:color/holo_orange_dark"


            android:text="Sign In"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>




</RelativeLayout>